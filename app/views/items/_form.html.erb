<%= form_for @item do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :category %>
  <%= f.select(:category, options_for_select([['Music Video', 'Music Video'], ['Commercial', 'Commercial'], ['Film', 'Film'], ['Music', 'Music']])) %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :link %>
  <%= f.text_field :link %>

  <%= f.label :thumbnail %>
  <%= f.file_field :thumbnail %>

  <%= f.submit %>
<% end %>
